@model IEnumerable<ProyectoFinalVeterinaria.Models.Clinicas>

@{
    ViewBag.Title = "Clínicas Veterinarias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nueva Clínica", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Provincias.descProvincia)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Provincias.descProvincia)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idClinica }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idClinica }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idClinica })
        </td>
    </tr>
}

</table>
