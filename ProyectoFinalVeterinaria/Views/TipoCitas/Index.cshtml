@model IEnumerable<ProyectoFinalVeterinaria.Models.TipoCitas>

@{
    ViewBag.Title = "Tipos de Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tipos de citas para mascotas</h2>

<p>
    @Html.ActionLink("Agregar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descTipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descTipo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idTipo }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idTipo }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idTipo })
        </td>
    </tr>
}

</table>
