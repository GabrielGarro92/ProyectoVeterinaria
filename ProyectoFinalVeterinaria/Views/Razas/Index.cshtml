@model IEnumerable<ProyectoFinalVeterinaria.Models.Razas>

@{
    ViewBag.Title = "Registro de razas de mascotas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Agregar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descRaza)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descRaza)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idRaza }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idRaza }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idRaza })
        </td>
    </tr>
}

</table>
